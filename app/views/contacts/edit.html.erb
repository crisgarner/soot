<section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Edit</h2>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                	<%= form_tag("/contacts/update_contact/"+@contact.id.to_s, method: "post") do %>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                	<label style="color:white">Name:</label>
                                    <input type="text" value="<%= @contact.name %>" name="name" class="form-control">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                	<label style="color:white">Email:</label>
                                    <input type="text" value="<%= @contact.email %>" name="email" class="form-control">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                	<label style="color:white">Phone:</label>
                                    <input type="text" value="<%= @contact.phone %>" name="phone" class="form-control">
                                    <p class="help-block text-danger"></p>
                                </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <%= submit_tag "Save", :class => 'btn btn-xl' %>

                            </div>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
    </section>



	
	
