<style>
li {list-style-type: none;}
table{
	width: 90%;
}
</style>
<section id="contact" style="margin-top:-100px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Select and edit which contacts you want to save</h2>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                   
				<table>
				<%= form_tag("/contacts/save_contacts", method: "post") do %>

				<% if !@contacts.nil?%>
					<tr style="color:white;">
						<td></td>
						<td>Name</td>
						<td>Email</td>
						<td>Phone Number</td>
					</tr>
					<ul>
					<% 
					i = 0
					@contacts.each do |c|
						i += 1
						%>

					<tr>
						<td><li><input type="checkbox" name="form[<%= i%>][status]"> </td>
						<td><input type="text" value="<%= c[:name]%>" name="form[<%= i%>][name]" class="form-control"></td> 
						<td><input type="text" value="<%= c[:email]%>" name="form[<%= i%>][email]" class="form-control"></td>
						<td><input type="text" value="<%= c[:phone_number]%>" name="form[<%= i%>][number]" class="form-control"></td>
						</li>
					</tr>
						
					
					<%end%>
					</ul>	
					<tr><td></td><td></td><td></td><td></td></tr>
					<tr><td></td><td></td><td></td><td>  <%= submit_tag "Save", :class => 'btn btn-xl' %></td></tr>
				<%end%>
				<% end %>
				</table>
                </div>
            </div>
        </div>
    </section>

